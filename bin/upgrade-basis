#!/usr/bin/env bash

set -e

die () {
	echo >&2 "$1"
	exit 1
}

name=`basename $0`

usage () {
	die "usage: $name <PATH>"
}

case "$#" in
1)
	PATH="$1"
;;
*)
	usage
;;
esac

tmp="$$.sml"

feature () {
	feature="$1"
	sml="$2"
	echo "$feature" >$tmp
	if ! mlton $tmp >/dev/null 2>&1; then
		echo "$sml"
	fi
}

feature 'fun f x : string option = TextIO.inputLine x' '
structure TextIO =
   struct
      open TextIO

      fun inputLine ins =
         case TextIO.inputLine ins of
            "" => NONE
          | s => SOME s
   end'
	
feature 'fun f x : string option = OS.FileSys.readDir x' '
structure OS =
   struct
      open OS
      structure FileSys =
         struct
            open FileSys
            fun readDir d =
               case FileSys.readDir d of
                  "" => NONE
                | s => SOME s
         end
   end'

feature 'val _ = IntInf.~>>' '
structure IntInf = 
   struct
      open IntInf

      val ~>> : int * Word.word -> int =
	 fn _ => raise Fail "IntInf.~>>"
   end'

rm -f $tmp
rm -f `basename $tmp .sml`
