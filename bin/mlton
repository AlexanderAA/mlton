#!/bin/bash

# This script calls MLton.

lib='lib unset'
gcc='gcc'
mlton="$lib/mlton-compile"
nj='sml'
njHeap="$lib/mlton.x86-linux"

rargs=""
case "$1" in
@MLton)
	shift
	while [ $# -gt 0 -a "$1" != "--" ]; do
		rargs="$rargs $1"
		shift
	done
	shift
	;;
esac

# If $mlton is executable and $world exists and is not older than
# $njHeap (which exists), then use MLton, otherwise use SML/NJ.
doit () {
	if [ -x "$mlton" -a ! "$njHeap" -nt "$mlton" ]; then
		exec "$mlton" @MLton $rargs -- "$@"
	elif [ -s "$njHeap" ]; then
		exec "$nj" @SMLload="$njHeap" "$@"
	fi
	echo 'Unable to run MLton.  Check that lib is set properly.' >&2
	exit 1
}

doit "$lib" \
	"$gcc" -w -fomit-frame-pointer -fno-strength-reduce \
	-mcpu=pentiumpro -malign-loops=2 -malign-jumps=2 -malign-functions=5 \
	-fschedule-insns -fschedule-insns2 END \
	-include mlton.h -lgmp -lm "$@"
